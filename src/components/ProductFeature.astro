---
const {
  title,
  desc,
  img,
  color = '#A3E635',
  textColor = '#ffffff',
  buttonText = '¿Dónde comprar?',
  buttonHref = '#productes'
} = Astro.props;
---

<section style={` color: ${textColor}`} class="py-16 ">
  <div class="container mx-auto px-6 flex flex-col-reverse lg:flex-row items-center justify-between gap-10">

    <div class="lg:w-1/2 text-center lg:text-left">
      <h3 style={`color: ${color}`} class="text-3xl md:text-4xl font-extrabold mb-6">{title}</h3>
      
      <a href={buttonHref}
        style={`background-color: ${color}; color: #000`}
        class="inline-flex items-center gap-2 font-bold py-3 px-6 rounded shadow-lg hover:opacity-90 transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h11M9 16l6-6-6-6" />
        </svg>
        {buttonText}
      </a>

      <p style={`color: ${color}`} class="mt-6 text-base md:text-lg max-w-md mx-auto lg:mx-0">{desc}</p>
    </div>

    <div class="lg:w-1/2 flex justify-center">
      <img src={img} alt={title} class="w-72 md:w-80 max-h-96 object-contain" />
    </div>

  </div>
</section>
